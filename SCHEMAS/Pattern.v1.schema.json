{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "Pattern.v1.schema.json",
  "title": "Pattern",
  "description": "Contenu rythmico-mélodique avec automations paramétriques",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "const": "Pattern.v1",
      "description": "Version du schéma"
    },
    "id": {
      "type": "string",
      "description": "Identifiant unique du pattern"
    },
    "name": {
      "type": "string",
      "description": "Nom du pattern"
    },
    "targetMachine": {
      "type": "string",
      "pattern": "^[a-z]+\\.[a-z0-9]+$",
      "description": "Machine cible (vendor.model)"
    },
    "lengthSteps": {
      "type": "integer",
      "enum": [12, 16, 32, 48, 64, 68, 128, 256],
      "description": "Longueur en pas"
    },
    "resolutionPPQ": {
      "type": "integer",
      "enum": [96, 192, 480],
      "description": "Résolution en PPQ (Pulses Per Quarter)"
    },
    "steps": {
      "type": "array",
      "description": "Liste des pas (notes/événements)",
      "items": {
        "type": "object",
        "properties": {
          "t": {
            "type": "integer",
            "minimum": 0,
            "description": "Position temporelle (en pas)"
          },
          "note": {
            "type": "integer",
            "minimum": 0,
            "maximum": 127,
            "description": "Note MIDI (0-127)"
          },
          "vel": {
            "type": "integer",
            "minimum": 0,
            "maximum": 127,
            "description": "Vélocité (0-127)"
          },
          "duration": {
            "type": "number",
            "minimum": 0,
            "description": "Durée en beats (optionnel, défaut = 1 pas)"
          },
          "microTime": {
            "type": "integer",
            "description": "Offset micro-timing en ticks (optionnel)"
          },
          "ratchet": {
            "type": "integer",
            "minimum": 1,
            "description": "Nombre de sous-déclenchements (optionnel)"
          },
          "prob": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Probabilité de déclenchement (0.0-1.0, optionnel)"
          },
          "slide": {
            "type": "boolean",
            "description": "Slide/glide vers la note suivante (optionnel)"
          },
          "accent": {
            "type": "boolean",
            "description": "Accent (optionnel)"
          }
        },
        "required": ["t", "note", "vel"]
      }
    },
    "automation": {
      "type": "array",
      "description": "Automations de paramètres",
      "items": {
        "type": "object",
        "properties": {
          "target": {
            "type": "string",
            "description": "Paramètre cible (ex: cutoff, resonance)"
          },
          "at": {
            "type": "number",
            "minimum": 0,
            "description": "Position temporelle en pas"
          },
          "val": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Valeur normalisée (0.0-1.0)"
          },
          "easing": {
            "type": "string",
            "enum": ["lin", "log", "exp", "smooth"],
            "description": "Type d'interpolation (optionnel, défaut = lin)"
          },
          "duration": {
            "type": "number",
            "minimum": 0,
            "description": "Durée de la transition en beats (optionnel)"
          }
        },
        "required": ["target", "at", "val"]
      }
    },
    "swing": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Swing global du pattern (0.0-1.0, optionnel)"
    }
  },
  "required": ["schema", "id", "targetMachine", "lengthSteps", "resolutionPPQ", "steps"]
}

